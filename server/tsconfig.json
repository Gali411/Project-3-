{
  "compilerOptions": {
    /* Specify ECMAScript version and module resolution */
    "target": "ES6",                       // Target modern JavaScript
    "module": "ESNext",                    // Use ES Modules
    "moduleResolution": "Node",           // Resolve modules using Node.js conventions

    /* Output Settings */
    "rootDir": "src",                      // Specify the root folder of your source files
    "outDir": "dist",                      // Specify the output folder for compiled files

    /* TypeScript Features */
    "allowJs": true,                       // Allow JavaScript files
    "checkJs": false,                      // Do not type-check JavaScript files
    "strict": false,                       // Disable strict mode for compatibility
    "esModuleInterop": true,               // Enable compatibility with CommonJS modules

    /* Type Declarations */
    "typeRoots": ["./node_modules/@types", "./src/types"],

    /* Source Map */
    "sourceMap": true                      // Enable source maps for debugging
  },
  "include": [
    "src/**/*.js",                         // Include all JavaScript files in `src`
    "src/**/*.ts"                          // Include any remaining TypeScript files
  ],
  "exclude": [
    "node_modules",                        // Exclude dependencies
    "dist"                                 // Exclude compiled files
  ]
}
